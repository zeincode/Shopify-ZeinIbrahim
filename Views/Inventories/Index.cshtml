@model IEnumerable<Shopify_ZeinIbrahim.Models.Inventory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CurrentStock)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.minimumAllowedStock)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Warehouse)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.ProductNumber)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CurrentStock)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.minimumAllowedStock)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Warehouse)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.ProductNumber)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SKUID }) |
            @Html.ActionLink("Details", "Details", new { id=item.SKUID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.SKUID })
        </td>
    </tr>
}

</table>
